// scripts/tsconfig.json  
{  
  "compilerOptions": {  
    "target": "es2017",  
    "module": "commonjs",  
    "lib": ["es2017", "esnext.asynciterable"],  
    "strict": true,  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "moduleResolution": "node",  
    "resolveJsonModule": true,  
    "isolatedModules": true,  
    "incremental": true  
  },  
  "include": ["**/*.ts"],  
  "exclude": ["node_modules"]  
}  